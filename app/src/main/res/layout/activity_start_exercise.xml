<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartExerciseActivity"
    android:background="@color/dark_background">

    <TextView
        android:id="@+id/start_exercise_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="112dp"
        android:text="@string/choose_mode"
        android:textAlignment="center"
        style="@style/text_regular"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/start_exercise_run_btn"
        style="@style/card_btn"
        app:layout_constraintTop_toBottomOf="@id/start_exercise_text"
        app:layout_constraintLeft_toLeftOf="@id/start_exercise_text"
        app:layout_constraintRight_toLeftOf="@id/start_exercise_walk_btn"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="40dp"
        app:drawableTopCompat="@drawable/run_icon"
        android:text="@string/run" />

    <TextView
        android:id="@+id/start_exercise_walk_btn"
        style="@style/card_btn"
        app:layout_constraintTop_toBottomOf="@id/start_exercise_text"
        app:layout_constraintRight_toRightOf="@id/start_exercise_text"
        app:layout_constraintLeft_toRightOf="@id/start_exercise_run_btn"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        app:drawableTopCompat="@drawable/walk_icon"
        android:text="@string/walk" />

</androidx.constraintlayout.widget.ConstraintLayout>