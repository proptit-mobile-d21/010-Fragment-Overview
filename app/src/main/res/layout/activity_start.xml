<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity"
    android:background="@color/black"
    android:id="@+id/activity_start">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You may not know that for good health, you
need to exercise for at least 30 minutes a day.
Choose a workout mode you need and get started."
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:gravity="center"
        android:textSize="18dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="100dp"/>
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/text"
        android:layout_marginTop="40dp"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/walk"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:src="@drawable/icon_walk"/>
        <ImageView
            android:id="@+id/run"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:src="@drawable/icon_run"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>