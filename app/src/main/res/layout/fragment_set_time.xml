<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetTimeFragment"
    android:background="@color/black"
    android:gravity="center_horizontal">


    <ImageView
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_left"
        android:layout_marginVertical="32dp"
        android:layout_marginEnd="16dp"
        android:paddingTop="8dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time"
        android:layout_toRightOf="@id/back_button"
        android:layout_alignTop="@id/back_button"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/start_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/back_button"
        android:text="@string/start"
        android:textColor="@color/white"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/start_text"
        android:layout_marginStart="136dp"
        android:layout_marginLeft="136dp"
        android:layout_toRightOf="@id/start_text"
        android:text="@string/end"
        android:textColor="@color/white"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/start_edit_text"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_text"
        android:background="@drawable/set_time_shape"
        android:paddingVertical="16dp"
        android:paddingHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/end_edit_text"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/start_edit_text"
        android:layout_toRightOf="@id/start_edit_text"
        android:background="@drawable/set_time_shape"
        android:paddingVertical="16dp"
        android:paddingHorizontal="24dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_edit_text"
        android:layout_marginStart="64dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_shape"
        android:paddingHorizontal="88dp"
        android:paddingVertical="16dp"
        android:text="@string/start"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"/>

</RelativeLayout>