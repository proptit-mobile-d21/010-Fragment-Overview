<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background"
    tools:context=".SetTimeActivity">

    <ImageView
        android:id="@+id/set_time_back_btn"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scaleType="center"
        android:src="@drawable/arrow_back"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/set_time_back_btn"
        android:gravity="center_vertical"
        style="@style/text_regular"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/time"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/set_time_split_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <TextView
        android:id="@+id/set_time_start_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/text_regular"
        app:layout_constraintTop_toBottomOf="@id/set_time_back_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/set_time_split_guideline"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="8dp"
        android:text="@string/start"/>

    <TextView
        android:id="@+id/set_time_start_time_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/set_time_start_txt"
        app:layout_constraintLeft_toLeftOf="@id/set_time_start_txt"
        app:layout_constraintRight_toRightOf="@id/set_time_start_txt"
        android:layout_marginTop="16dp"
        android:paddingVertical="16dp"
        android:paddingHorizontal="24dp"
        android:background="@drawable/rounded_time_picker"
        style="@style/text_regular"
        android:textStyle="bold"
        android:textSize="18sp"
        tools:text="00:00" />

    <TextView
        android:id="@+id/set_time_end_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/text_regular"
        app:layout_constraintBaseline_toBaselineOf="@id/set_time_start_txt"
        app:layout_constraintLeft_toRightOf="@id/set_time_split_guideline"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="24dp"
        android:text="@string/end"/>

    <TextView
        android:id="@+id/set_time_end_time_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/set_time_start_time_txt"
        app:layout_constraintRight_toRightOf="@id/set_time_end_txt"
        app:layout_constraintLeft_toLeftOf="@id/set_time_end_txt"
        android:paddingVertical="16dp"
        android:paddingHorizontal="24dp"
        android:background="@drawable/rounded_time_picker"
        style="@style/text_regular"
        android:textStyle="bold"
        android:textSize="18sp"
        tools:text="23:59" />

    <TextView
        android:id="@+id/set_time_start_btn"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/set_time_start_time_txt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        style="@style/button_regular"
        android:text="@string/start" />

</androidx.constraintlayout.widget.ConstraintLayout>